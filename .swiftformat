# SwiftFormat Configuration for Echo
# https://github.com/nicklockwood/SwiftFormat

# File options
--exclude build,DerivedData,.build,Pods

# Format options
--indent 4
--indentcase false
--trimwhitespace always
--insertlines true
--removelines true
--allman false
--wraparguments beforefirst
--wrapparameters beforefirst
--wrapcollections beforefirst
--closingparen balanced
--wrapreturntype preserve
--wrapconditions preserve
--wraptypealiases preserve
--funcattributes prev-line
--typeattributes prev-line
--varattributes same-line
--storedvarattrs same-line
--computedvarattrs same-line
--complexattrs prev-line
--noncomplexattrs same-line
--markextensions always
--categorymark "MARK: - %c"
--marktypes always
--typemark "MARK: - %t"
--markfiletypes true
--groupedextension "MARK: - %c"

# Enabled rules
--enable isEmpty
--enable sortImports
--enable duplicateImports
--enable unusedArguments
--enable hoistPatternLet
--enable wrapMultilineStatementBraces
--enable braces
--enable redundantParens
--enable redundantReturn
--enable redundantSelf
--enable trailingCommas
--enable todos
--enable semicolons
--enable strongOutlets
--enable yodaConditions

# Disabled rules
--disable wrapEnumCases
--disable organizeDeclarations
EOF < /dev/null